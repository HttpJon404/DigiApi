
doctype html
head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Detalle digimon

  link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css' integrity='sha384-zCbKRCUGaJDkqS1kPbPd7TveP5iyJE0EjAuZQTgFLD2ylzuqKfdKlfG/eSrtxUkn' crossorigin='anonymous')
  link(rel='stylesheet' href='/stylesheets/detalle.css')
  link(rel='stylesheet' href='/stylesheets/global.css')


    

.container.shadow.p-3.mb-5.bg-white.rounded.bg-white
  .row.justify-content-center
    .col-8
      .card.mb-3.align-right
        .card-body
          h1.card-title.text-center.titulo  #{digi.name} 
        img.float-right.imagen-detalle.img-fluid.card-img-top(src=`${digi.img}` alt='...')
        .card-body
          h3.card-text.text-center Level : #{digi.level}
  hr


  .row.mt-5

    each d in sameLevel 
      .col-3
        .card.mb-3.zoom(style='max-width: 540px;')
          .row.no-gutters
            .col-md-4

              img.img-fluid(src=`${d.img}` alt='...')
            .col-md-8
              .card-body
                h5.card-title=d.name
                a.btn-sm.btn.btn-primary(href=`/detalle/${d.name}`) Detalle

